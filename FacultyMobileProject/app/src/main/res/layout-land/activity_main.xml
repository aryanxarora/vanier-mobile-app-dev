<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty Mobile Project"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
/>

    <TextView
        android:id="@+id/faculty_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty no."
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty Name"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
 />

    <TextView
        android:id="@+id/textViewSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary"
        android:layout_gravity="right|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
 />

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty Rate Bonus"
        android:layout_gravity="right|center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
 />

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty Amount Bonus"
        android:layout_gravity="right|center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
 />

    <Button
        android:id="@+id/prevbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prev"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginRight="100dp"
/>

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginRight="0dp"
/>

    <Button
        android:id="@+id/buttonCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Bonus"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:layout_marginRight="50dp"
/>

</FrameLayout>